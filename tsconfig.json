{
  "compilerOptions": {
    "noImplicitAny": false,
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowUmdGlobalAccess": true,
    "paths": {
      "x/*": ["./src/x/*"],
      "src/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*", "./src/*"]
}
